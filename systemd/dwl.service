[Unit]
Description=DWL
BindsTo=dwl-session.target
Wants=dwl-session-pre.target
After=dwl-session-pre.target
Before=dwl-session.target

[Service]
Type=notify
ExecStart=dwl
Restart=on-failure
RestartSec=1
TimeoutStopSec=10
NotifyAccess=all
ExecStopPost=/usr/bin/systemctl --user unset-environment DISPLAY WAYLAND_DISPLAY
