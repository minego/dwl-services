#!/usr/bin/env bash

# TODO: error handling

# From: https://people.debian.org/~mpitt/systemd.conf-2016-graphical-session.pdf

# robustness: if the previous graphical session left some failed units,
# reset them so that they don't break this startup
for unit in $(systemctl --user --no-legend --state=failed --plain list-units | cut -f1 -d' '); do
	partof="$(systemctl --user show -p PartOf --value "$unit")"
	for target in dwl-session.target wayland-session.target graphical-session.target; do
		if [ "$partof" = "$target" ]; then
			systemctl --user reset-failed "$unit"
			break
		fi
	done
done

# /etc/profile contains a lot of important environment variables
source /etc/profile

export XDG_CURRENT_DESKTOP=wlroots

# save environment variables that will be added to systemd
new_env=$(systemctl --user show-environment | cut -d'=' -f 1 | sort | comm -13 - <(env | grep -v "^_" | cut -d'=' -f 1 | sort))

# ${new_env} contains each environment variable on a line by itself - Replace the
# newlines with spaces
import_env="${new_env//$'\n'/ }"

# import environment variables from the login manager
systemctl --user import-environment "$import_env"

# then start the service
systemctl --wait --user start dwl.service

# cleanup environment
systemctl --user unset-environment "$import_env"

